generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String       @id @default(cuid())
  name       String
  email      String       @unique
  phone      String       @unique
  altPhone   String?
  company    Company      @relation(fields: [companyId], references: [id])
  companyId  String
  role       Role         @default(EMPLOYEE)
  avatarUrl  String?
  status     String       @default("offline")
  createdAt  DateTime     @default(now())
  attendance Attendance[]
}

model Company {
  id      String @id @default(cuid())
  name    String
  address String
  users   User[]
}

model Attendance {
  id           String    @id @default(cuid())
  userId       String
  date         DateTime
  punchInAt    DateTime?
  punchOutAt   DateTime?
  totalSeconds Int?
  user         User      @relation(fields: [userId], references: [id])
}

enum Role {
  ADMIN
  EMPLOYEE
}
